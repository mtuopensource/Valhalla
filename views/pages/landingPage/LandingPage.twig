{% extends 'pages/Base.twig' %}
{% block content %}
  


  {% include 'pages/landingPage/hero/Hero.twig' with {'quote': post.hero_quote, 'author': post.hero_author, 'image': TimberImage(post.hero_image) } only %}
  {% include 'pages/landingPage/intro/Intro.twig' with {'mission': post.mission, 'cta': post.mission_cta, 'cta_link': post.mission_cta_link } only %}
  {{ post.content }}
  
  <section class="information">
    <div class="information__container">


      <div class="calendar">
        <div class="calendar__header">
          <h2>Dates to Remember</h2>
          {% include 'components/button/Button.twig' with {'title': 'All Events', 'href': 'https://calendar.google.com/calendar/embed?src=mtu.edu_09qi6pfnktib7heh2grshjvqo4%40group.calendar.google.com&ctz=America%2FNew_York'} only %}
        </div>
        <hr /> 
        {% for event in calendar_events %}
        {% set event_start = date(event.start.dateTime ) %}
        <div class="event">
          <div class="event__meta">
            <span class="event__date">
              {{ event_start | date('d') }}
            </span>
            <span class="event__month">
              {{ event_start | date('M') }}
            </span>
          </div>
          <div class="event__information">
            <span class="event__summary">
              {{ event.summary }}
            </span>
            <br>
            <span class="event__location">
              {{ event.location }}
            </span>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="plug">
        <div class="plug__container">
          <div class="plug__cover"></div>
          <div class="plug__content">
            <div class="plug__text">
              <div class="plug__lead">
                Are you interested in Linux, Raspberry Pi, or Arduino?
              </div>
              <p class="plug__description">
                If this sounds like you, you might be a perfect member for the Open Source Club at Michigan Tech!
              </p>
            </div>
            {% include 'components/button/Button.twig' with {'title': 'Join the Club' } only %}
          </div>
        </div>
      </div>
    </div>
  </section>

    {% endblock %}
